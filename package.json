    "@types/sinon": "^4.3.1",
    "@types/sinon-chai": "^2.7.29",
    "archiver": "^2.1.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
	"chalk": "^2.4.0",
	"firebase-admin": "^5.12.0",
    "fs-extra": "^5.0.0",
    "mocha": "^5.1.1",
    "replace": "^0.3.0",
    "rimraf": "^2.6.2",
    "typescript": "^2.8.3"
  },
  "dependencies": {
    "ask-sdk": "^2.0.0",
    "ask-sdk-core": "^2.0.1",
